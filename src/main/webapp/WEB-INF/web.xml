<web-app>
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>servlets.CatalogueServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>servlets.LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>servlets.RegisterServlet</servlet-name>
        <servlet-class>servlets.RegisterServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>servlets.HomeServlet</servlet-name>
        <servlet-class>servlets.HomeServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlets.LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlets.RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlets.HomeServlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>
</web-app>